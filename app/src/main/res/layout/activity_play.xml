<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cj.sumultanea.PLAY"
    android:background="@drawable/bgplay">

    <LinearLayout
        android:id="@+id/localPlayerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/questionLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/imageViewLocalPlayer"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/pump" />

        <LinearLayout
            android:id="@+id/localPlayerLivesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/heart" />
            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/heart" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherPlayersLayout"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/answersLayout"
        app:layout_constraintLeft_toRightOf="@+id/questionLayout"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/bluepanda" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/duel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/pump" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/war" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heart" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/questionLayout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/localPlayerLayout"
        app:layout_constraintBottom_toTopOf="@+id/answersLayout"
        app:layout_constraintRight_toLeftOf="@+id/otherPlayersLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textSize="24sp"
            android:background="#cc000000"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/answersLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <Button
            android:text="Button"
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <Button
            android:text="Button"
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <Button
            android:text="Button"
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <Button
            android:text="Button"
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </LinearLayout>

    <ImageView
        android:id="@+id/localPlayerAnimation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/localPlayerLayout"
        app:layout_constraintRight_toLeftOf="@+id/otherPlayerAnimation"
        app:srcCompat="@drawable/pump"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/otherPlayerAnimation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/localPlayerAnimation"
        app:layout_constraintRight_toLeftOf="@+id/otherPlayersLayout"
        app:srcCompat="@drawable/war"
        android:layout_marginTop="32dp" />

</android.support.constraint.ConstraintLayout>
