<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sombright.simultanea">

    <!-- Required for Nearby Connections -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/panda3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sombright.simultanea.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sombright.simultanea.CharacterSelectionActivity" />
        <activity android:name="com.sombright.simultanea.PlayActivity" />
        <activity android:name="com.sombright.simultanea.SettingsActivity" />
        <activity android:name="com.sombright.simultanea.ProfileActivity" />
        <activity android:name="com.sombright.simultanea.CharacterDetailsActivity" />
        <activity android:name="com.sombright.simultanea.IntroActivity" />
    </application>

</manifest>